<h1> Order List </h1>

<ol>
    <% @orders.each do |order| %>
       <li><%= link_to order.product.name, order_path(order)%>
       | Item Price: <%= number_to_currency(order.product.price) %> | Qty: <%= order.quantity %> 
       | Total: <%= number_to_currency(order.product.price * order.quantity) %>
    </li>
    <% end %>


